<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="9dp"

    >
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_gravity="center|top"
        android:background="@drawable/bg_view" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="horizontal">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <TableRow>

                <TextView
                    android:text="ID "
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text=": "
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_id_issues_asset"
                    android:layout_width="wrap_content"
                    android:text="id"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="Nama "
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:text=": "
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_name_issues_asset"
                    android:layout_width="wrap_content"
                    android:text="nama"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:text="Type "
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:text=": "
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_type_issues_asset"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="type"
                    android:drawableStart="@drawable/task"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:text="Priority "
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:text=": "
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_priority_issues_asset"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="issues"
                    android:drawableStart="@drawable/low_prio"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:text="Status "
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:text=": "
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_status_issues_asset"
                    android:layout_width="wrap_content"
                    android:text="Done"
                    android:layout_gravity="left"
                    android:textColor="@color/whiteTextColor"
                    android:textStyle="bold"
                    android:background="@drawable/bg_status_deployed"
                    android:paddingHorizontal="15dp"
                    android:textSize="16dp" />
            </TableRow>
            <TableRow>

                <TextView
                    android:text="Due Date "
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:text=": "
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_duedate_issues_asset"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="due date"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </TableRow>
        </TableLayout>
        <TextView
            android:id="@+id/tv_valType_issues_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_idclient_issues_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_idasset_issues_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asset"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_adminid_issues_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="license_tag_prefix"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_projectid_issues_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="notes"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_description_issues_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="notes"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
        <ImageButton
            android:id="@+id/btn_edit_issues_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:background="@color/whiteCardColor"
            android:src="@drawable/edit" />

        <ImageButton
            android:id="@+id/btn_delete_issues_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:background="@color/whiteCardColor"
            android:src="@drawable/delete" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>