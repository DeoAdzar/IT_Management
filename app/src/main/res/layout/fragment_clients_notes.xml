<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.Clients.FragmentDetail.ClientNotes.ClientsNotesFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="9dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_gravity="center|top"
            android:background="@drawable/bg_view"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/clientid_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/clientname_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvasset_tag_prefix_client_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvlicense_tag_prefix_client_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes :"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <EditText
                android:id="@+id/et_notes_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">
            <Button
                android:id="@+id/btn_save_notes_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:text="Save"
                android:textAllCaps="false"
                android:visibility="gone"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/bg_btn_save"
                android:textColor="@color/whiteTextColor"
                android:paddingLeft="10dp"
                android:drawableStart="@drawable/save"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btn_cancel_notes_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:text="Cancel"
                android:textAllCaps="false"
                android:visibility="gone"
                android:background="@drawable/bg_btn_cancel"
                android:textColor="@color/whiteTextColor"
                android:paddingLeft="10dp"
                android:drawableStart="@drawable/cancel"
                android:textStyle="bold"
                />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>